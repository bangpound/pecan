{
    "name": "mcrumm/pecan",
    "description": "An event-driven, non-blocking shell for ReactPHP based on the Symfony Console Shell.",
    "keywords": [ "shell", "console", "react" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Crumm",
            "email": "mike@crumm.net"
        }
    ],
    "require": {
        "php": ">= 5.4",
        "react/promise": "~2.0",
        "symfony/console": "~2.4|^3.0",
        "react/child-process": "0.4.*"

    },
    "require-dev": {
        "phpspec/phpspec": "^2.5"
    },
    "autoload": {
        "psr-4": {
            "Pecan\\": "src"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "minimum-stability": "stable",
    "extra": {
        "branch-alias": {
            "dev-develop":  "2.0-dev"
        }
    }
}
